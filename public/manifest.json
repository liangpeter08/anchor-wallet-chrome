{
  "name": "Anchor Wallet",
  "description": "Anchor wallet to manage your funds",
  "version": "1.0.1",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Anchor Money"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "16": "app-icon-logo.png",
    "48": "app-icon-logo.png",
    "128": "app-icon-logo.png"
  },
  "permissions": ["cookies", "storage", "https://development.anchor.fm/"]
}
